<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <link rel='stylesheet' href='/@material/form-field/dist/mdc.form-field.css'/>
    <link rel='stylesheet' href='/@material/button/dist/mdc.button.css'/>
    <link rel='stylesheet' href='/@material/textfield/dist/mdc.textfield.css'/>
    <link rel='stylesheet' href='/@material/icon-button/dist/mdc.icon-button.css'/>
    <link rel='stylesheet' href='/stylesheets/account/create.css'/>

    <script src="/@material/form-field/dist/mdc.formField.js"></script>
    <script src="/@material/textfield/dist/mdc.textfield.js"></script>
    <script src="/@material/icon-button/dist/mdc.iconButton.js"></script>
    <script src="/javascripts/account/password.js"></script>

    <script src='/components/topBar.js' type="text/javascript" defer></script>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 100,
            'wght' 400,
            'GRAD' 0,
            'opsz' 24
        }
    </style>
</head>

<top-bar></top-bar>

<main class="mdc-top-app-bar--fixed-adjust mdc-typography">

    <form class="form-container">
        <!-- Form. -->

        <h1 class="mdc-typography--headline5" style="text-align:center">Change Password</h1>

        <!-- Old Password -->
        <label id='oldPassword' class="userInput mdc-text-field mdc-text-field--outlined mdc-text-field--no-label mdc-text-field--with-trailing-icon">
            <span class="mdc-notched-outline">
                <span class="mdc-notched-outline__leading"></span>
                <span class="mdc-notched-outline__notch">
                </span>
                <span class="mdc-notched-outline__trailing"></span>
            </span>

            <input id='oldPasswordInput' class="mdc-text-field__input" type="password"
                   placeholder="Old Password"
                   aria-labelledby="oldPassword"
                   aria-controls="oldPassword"
                   aria-describedby="oldPassword"
                   onkeyup="validate()"
                   onkeydown="empty('oldPassword')"
                   onChange="validate('oldPassword')"
                   onclick="empty('oldPassword')">

            <i id='oldPasswordButton' class="material-icons material-symbols-outlined mdc-text-field__icon mdc-text-field__icon--trailing" tabindex="0" role="button" onclick="visible('oldPassword')">visibility_off</i>
        </label>
        <div class="validation mdc-text-field-helper-line">
            <div id="oldPasswordMsg" class="mdc-text-field-helper-text--validation-msg" aria-hidden="true"></div>
        </div>



        <!-- New Password #1 -->
        <label id='newPassword1' class="userInput mdc-text-field mdc-text-field--outlined mdc-text-field--no-label mdc-text-field--with-trailing-icon">
            <span class="mdc-notched-outline">
                <span class="mdc-notched-outline__leading"></span>
                <span class="mdc-notched-outline__notch">
                </span>
                <span class="mdc-notched-outline__trailing"></span>
            </span>

            <input id='newPassword1Input' class="mdc-text-field__input" type="password"
                   placeholder="New Password"
                   aria-labelledby="newPassword1"
                   aria-controls="newPassword1"
                   aria-describedby="newPassword1"
                   onkeyup="validate()"
                   onkeydown="empty('newPassword1')"
                   onChange="validate()"
                   onclick="empty('newPassword1')">

            <i id='newPassword1Button' class="material-icons material-symbols-outlined mdc-text-field__icon mdc-text-field__icon--trailing" tabindex="0" role="button" onclick="visible('newPassword1')">visibility_off</i>
        </label>

        <div class="validation mdc-text-field-helper-line">
            <div id="newPassword1Msg" class="mdc-text-field-helper-text--validation-msg" aria-hidden="true"></div>
        </div>



        <!-- New Password #2 -->
        <label id='newPassword2' class="userInput mdc-text-field mdc-text-field--outlined mdc-text-field--no-label mdc-text-field--with-trailing-icon">
            <span class="mdc-notched-outline">
                <span class="mdc-notched-outline__leading"></span>
                <span class="mdc-notched-outline__notch">
                </span>
                <span class="mdc-notched-outline__trailing"></span>
            </span>

            <input id='newPassword2Input' class="mdc-text-field__input" type="password"
                   placeholder="Confirm New Password"
                   aria-labelledby="newPassword2"
                   aria-controls="newPassword2"
                   aria-describedby="newPassword2"
                   onkeyup="validate()"
                   onkeydown="empty('newPassword2')"
                   onChange="validate()"
                   onclick="empty('newPassword2')">

            <i id='newPassword2Button' class="material-icons material-symbols-outlined mdc-text-field__icon mdc-text-field__icon--trailing" tabindex="0" role="button" onclick="visible('newPassword2')">visibility_off</i>
        </label>
        <div class="validation mdc-text-field-helper-line">
            <div id="newPassword2Msg" class="mdc-text-field-helper-text--validation-msg" aria-hidden="true"></div>
        </div>


        <!-- Submit Button -->
        <button id='submitButton' class="mdc-button mdc-button--unelevated mdc-ripple-upgraded" onsubmit="submit()" disabled>
            <div class="mdc-button__ripple"></div>
            <span class="mdc-button__label">Change Password</span>
        </button>

    </form>
</main>

</body>
</html>

